{
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "types": ["@types/node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowUnreachableCode": false
  },
  "include": ["*.ts"]
}
